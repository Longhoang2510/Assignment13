<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="25dp"
    android:background="@color/backround"
    android:id="@+id/largeLabel"

    >

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tilTaiKhoan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp">

        <EditText
            android:id="@+id/edTaiKhoan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tài khoản"
            android:inputType="text" />

    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/tilMatKhau"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tilTaiKhoan"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/edMatKhau"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mật khẩu"
            android:inputType="textPassword" />

    </android.support.design.widget.TextInputLayout>

    <CheckBox
        android:id="@+id/cbDieukhoan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tilMatKhau"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Bạn đã đọc và chấp nhận điều khoản của chúng tôi"
        android:textSize="9sp" />

    <Button

        android:id="@+id/btDangNhap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cbDieukhoan"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Đăng Nhập"
        android:textAllCaps="false"
        android:background="@color/colorPrimary"
        android:textColor="@color/backround"



        />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"
        android:layout_gravity="bottom"
        android:text="Bạn đã quên mật khẩu?"
        android:textColor="@color/color_text"
        android:textSize="12sp"
        android:layout_alignParentBottom="true"


        />


</RelativeLayout>
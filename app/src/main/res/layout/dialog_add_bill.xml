<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    >

    <EditText
        android:hint="ID Bill"
        android:id="@+id/edAddIDBill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvAddDateBill"
        android:textSize="22dp"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="10/10/2018" />

    <Button
        android:id="@+id/btnOpenDatePicker"
        android:text="Open DatePicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btnAddBill"
        android:text="Add Hoa Don"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>